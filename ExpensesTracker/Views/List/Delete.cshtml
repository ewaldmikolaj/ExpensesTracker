@model ExpensesTracker.Models.List

@{
    ViewData["Title"] = "Delete";
}


<div class="d-flex flex-column">
    <div class="d-flex flex-row justify-content-between align-items-center">
        <div>
            <h4 class="mb-0">@Html.DisplayFor(model => model.Name)</h4>
            <h6 class="mb-0">Czy na pewno chcesz usunąć listę?</h6>
        </div>
        <div>
            <a asp-action="Details" asp-route-id="@Model.Id">
                <button class="btn btn-dark">Powrót</button>
            </a>
        </div>
    </div>
    <hr />
</div>

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsPublic)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsPublic)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PublicUrl)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PublicUrl)
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Usuń" class="btn btn-danger" />
    </form>
</div>
