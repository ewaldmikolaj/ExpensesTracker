@model ExpensesTracker.Models.ExpensesListViewModel

@{
    ViewData["Title"] = "Details";
}


<div class="d-flex flex-column">
    <h2>@Model.List.Name</h2>
    <div class="d-flex flex-column">
        @foreach (var expense in Model.Expenses)
        {
            <div class="row rounded bg-light mb-2">
                <div class="col-11 p-2">
                    <a asp-controller="Expense" asp-action="Details" asp-route-id="@expense.Id" class="d-block text-decoration-none text-black">
                        <h6 class="mb-0">@expense.Title, @expense.Date.ToString("dd/MM/yyyy")</h6>
                        <p class="mb-0">@expense.Amount z≈Ç</p>
                    </a>
                </div>
                <div class="col p-2 bg-danger rounded-end d-flex justify-content-center align-items-center">
                    <a asp-action="Delete" asp-route-id="@expense.Id" class="d-block w-100 h-100 text-decoration-none text-black d-flex align-items-center justify-content-center">
                        <i class="bi bi-trash3-fill"></i>
                    </a>
                </div>
            </div>
        }
    </div>
</div>
