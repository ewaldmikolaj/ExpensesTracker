@model IEnumerable<ExpensesTracker.Models.Expense>

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex flex-column">
    <h1>Twoje rachunki</h1>
    <div class="mt-2 mb-4">
        <a asp-action="Create" class="text-decoration-none text-white">
            <button class="btn btn-dark">
                Stw√≥rz nowy rachunek
            </button>
        </a>
    </div>
    @foreach (var item in Model)
    {
        <div class="row rounded bg-light">
            <div class="col-11 p-2">
                <a asp-action="Details" asp-route-id="@item.Id" class="d-block text-decoration-none text-black">
                    <p class="m-0">@Html.DisplayFor(modelItem => item.Title)</p>
                </a>
            </div>
            <div class="col p-2 bg-danger rounded-end text-center">
                <a asp-action="Delete" asp-route-id="@item.Id" class="d-block text-decoration-none text-black">
                    <i class="bi bi-trash3-fill"></i>
                </a>
            </div>
        </div>
    }
</div>
