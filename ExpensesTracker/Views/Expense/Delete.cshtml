@model ExpensesTracker.Models.Expense

@{
    ViewData["Title"] = "Delete";
}

<div class="d-flex flex-column">
    <div class="d-flex flex-row justify-content-between align-items-center">
        <div>
            <h4 class="mb-0">@Html.DisplayFor(model => model.Title)</h4>
            <h6 class="mb-0">Czy na pewno chcesz usunąć wydatek?</h6>
        </div>
        <div>
            <a asp-action="Details" asp-route-id="@Model.Id">
                <button class="btn btn-dark">Powrót</button>
            </a>
        </div>
    </div>
    <hr/>
    <div class="row">
        <div class="col-6">
            <dl class="row">
                <dd class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Date)
                </dd>
                <dt class="col-sm-10">
                    @Html.DisplayFor(model => model.Date)
                </dt>
                <dd class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Amount)
                </dd>
                <dt class="col-sm-10">
                    @Html.DisplayFor(model => model.Amount) zł
                </dt>
                <dd class="col-sm-2">
                    Zapłacone przez
                </dd>
                <dt class="col-sm-10">
                    @Html.DisplayFor(model => model.Payer.Name) @Html.DisplayFor(model => model.Payer.Surname)
                </dt>
                <dd class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ListId)
                </dd>
                <dt class="col-sm-10">
                    @Html.DisplayFor(model => model.List.Name)
                </dt>
            </dl>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id"/>
                <input type="submit" value="Usuń" class="btn btn-danger"/>
            </form>
        </div>
        <div class="col-6">
            @if (Model.ReceiptPhoto != null)
            {
            <img class="img-fluid" src="@Model.ReceiptPhoto.Path" alt="Zdjęcie paragonu"/>
            }
        </div>
    </div>
</div>
